{
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET: Run Tests",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "dotnet",
      "args": ["test", "${workspaceFolder}/tests"],
      "cwd": "${workspaceFolder}/tests",
      "console": "internalConsole",
      "stopAtEntry": false
    },
    {
      "name": ".NET: Debug Tests",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "dotnet",
      "args": [
        "test",
        "${workspaceFolder}/tests",
        "--filter",
        "FullyQualifiedName~${input:testName}"
      ],
      "cwd": "${workspaceFolder}/tests",
      "console": "internalConsole",
      "stopAtEntry": false
    },
    {
      "name": ".NET: Debug Current Test",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "dotnet",
      "args": [
        "test",
        "${workspaceFolder}/tests",
        "--filter",
        "FullyQualifiedName~${fileBasenameNoExtension}"
      ],
      "cwd": "${workspaceFolder}/tests",
      "console": "internalConsole",
      "stopAtEntry": false
    },
    {
      "name": "Next.js: Debug",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "cwd": "${workspaceFolder}/app",
      "port": 9229,
      "serverReadyAction": {
        "pattern": "ready - started server on .+, url: (https?://.+)",
        "uriFormat": "%s",
        "action": "debugWithChrome"
      }
    }
  ],
  "inputs": [
    {
      "id": "testName",
      "type": "promptString",
      "description": "Test name pattern to filter",
      "default": "Should_"
    }
  ]
}
